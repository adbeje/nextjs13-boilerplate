{
  "plugins": ["react", "react-hooks", "prettier", "@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "next",
    "next/core-web-vitals",
    "eslint-config-prettier",
    "prettier",
    "plugin:storybook/recommended"
  ],
  "rules": {
    "camelcase": "warn",
    "indent": ["warn", 2],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"]
  },
  "root": true
}
